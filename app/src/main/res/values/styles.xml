<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/back_theme</item>

        <item name="pf_key_button">@style/MyLockScreenButtonStyle</item>
        <item name="pf_fingerprint_button">@style/MyLockScreenFingerprintButtonStyle</item>
        <item name="pf_delete_button">@style/MyLockScreenDeleteButtonStyle</item>
        <item name="pf_lock_screen">@style/MyLockScreenStyle</item>
        <item name="pf_code_view">@style/MyLockScreenCodeStyle</item>
        <item name="pf_next">@style/MyLockNextButtonStyle</item>
        <item name="pf_title">@style/MainFontBold</item>
    </style>
    
    <style name="SwitchButton">
        <item name="colorAccent">@color/colorMain</item>
    </style>

    <style name="MainTheme" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainFont">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MainFontBold" parent="MainFont">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CountsFont" parent="MainFontBold">
        <item name="android:textColor">@color/colorMain</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DarkMainFont" parent="MainFont">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextFont" parent="MainFont">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyLockScreenButtonStyle">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:background">@drawable/selector_code</item>
        <!--        <item name="android:foreground">?selectableItemBackgroundBorderless</item>-->
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LaunchCircle">
        <item name="android:src">@drawable/selector_circle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
    </style>

    <style name="MyLockScreenStyle">
        <item name="android:background">@color/colorMain</item>
    </style>

<!--    <style name="MyLockScreenButtonStyle">-->
<!--        <item name="android:textColor">@android:color/white</item>-->
<!--        <item name="android:textSize">18dp</item>-->
<!--        <item name="android:foreground">@drawable/key_foreground</item>-->
<!--    </style>-->

    <style name="MyLockScreenFingerprintButtonStyle">
        <item name="android:src">@drawable/ic_touch_id</item>
    </style>

    <style name="MyLockScreenDeleteButtonStyle">
        <item name="android:visibility">gone</item>
    </style>

    <style name="MyLockScreenCodeStyle">
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@drawable/selector_circle</item>
    </style>

    <style name="MyLockNextButtonStyle">
        <item name="android:visibility">gone</item>
    </style>

    <style name="MyLockTitleStyle">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="MyLockHintStyle">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="MyActionButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">8sp</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <style name="MyActionPositiveButtonStyle" parent="MyActionButtonStyle">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="MyActionGrayButtonStyle" parent="MyActionButtonStyle">
        <item name="android:backgroundTint">#808285</item>
    </style>

    <style name="MyActionNegativeButtonStyle" parent="MyActionPositiveButtonStyle">
        <item name="android:background">@drawable/ic_negative_button</item>
    </style>

    <style name="ProductTitleStyle" >
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ProductArtStyle" >
        <item name="android:textColor">@color/colorButtonNegative</item>
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SearchStyle" >
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ProductInStockStyle" >
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
